{
	"description": "Creates a release commit and tag from a git repository, packages artefacts and shoves them up to the cloud",
	"keywords": ["typo3", "azure", "tag", "gpg", "git"],
	"license": "MIT",
	"authors": [
		{
			"name": "Benni Mack",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": "^7.2",
		"ext-json": "*",
		"cpliakas/git-wrapper": "^1.7",
		"microsoft/azure-storage": "^0.16.0",
		"symfony/console": "^3.3",
		"symfony/dotenv": "^3.3",
		"symfony/finder": "^3.3",
		"symfony/yaml": "^3.3",
		"typo3fluid/fluid": "^2.7"
	},
	"require-dev": {
		"phpunit/phpunit": "^9"
	},
	"autoload": {
		"psr-4": {
			"TYPO3\\Darth\\": "src/"
		}
	},
	"config": {
		"sort-packages": true
	}
}
